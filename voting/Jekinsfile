pipeline {
    agent any
    tools {
        jdk 'jdk17'
        maven 'maven3'
    }
    stages {
        stage('git checkout') {
            steps {
                git branch: 'main', credentialsId: 'Git-user', url: 'https://github.com/KingSARDAR/craftista.git'
            }
        }
        stage('mvn build') {
            steps {
                dir('voting/') {
                    sh 'mvn clean package'
                }
            }
        }
        stage('docker image build') {
            steps {
                dir('voting/') {
                    sh 'docker image build -t sardar2705/voting:v1 .'
                }
            }
        }
        stage('docker image push') {
            steps {
                withDockerRegistry(credentialsId: 'docker-hub', url: '') {
                    sh 'docker push sardar2705/voting:v1'
                }
            }
        }
    }
}

